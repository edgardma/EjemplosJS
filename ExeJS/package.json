{
  "name": "mi-ejecutor-js",
  "version": "1.3.0",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "dist": "electron-builder -w"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.tuempresa.ejecutorjs",
    "productName": "Ejecutor JS",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "executor.html",
      "styles.css",
      "package.json",
      "node_modules/monaco-editor/min/**"
    ],
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "monaco-editor": "^0.45.0"
  }
}